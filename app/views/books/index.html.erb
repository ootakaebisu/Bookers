<main>
  <h1>Books</h1>

  <section class ="book-box">
    
      <!--<div class="record">-->
      <!--  <div class ="title-contents b"></div>-->
      <!--  <div class ="body-contents b"></div>-->
      <!--  <div class ="button-contents b">-->
      <!--  </div>-->
      <!--</div>-->
    
    <table>
      　<tr align="center">
      　　<th width ="185">title</th>
      　　<th width ="300">body</th>
      　</tr>
      <% @books.each do |book| %>
      　<tr>
      　　<td><%= book.title %></td>
      　　<td><%= book.body %></td>
        　  <th>
          　　  <%= link_to "show", book_path(book) %>
              <%= link_to "edit", edit_book_path(book) %>
              <%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %>
      　　    </th>
      　</tr>
      <% end %>
    </table>

  </section>

  <h2>New Book</h2>
    <!--バリデーションメッセージ-->
  
  <% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h6>errors prohibited this book from being saved:</h6>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>
  
  
  <div class="newbook">

    <%= form_with model:@book, local: true do |f| %>
    <div class="y">
      <h5>Title</h5>
      <%= f.text_field :title %>
    </div>

    <div class="y">
      <h5>Body</h5>
      <%= f.text_area :body %>
    </div>

    <div class="y">
      <%= f.submit 'Create Book' %>
    </div>
    <% end %>

  </section>
</main>





