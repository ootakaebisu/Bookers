<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

  <% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h6>errors prohibited this book from being saved:</h6>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
  <% end %>
  



<main>
<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
  <div class="y">
    <div class="z">Title</div>
    <%= f.text_field :title %>
  </div>
  
  <div class="y">
    <div class="z">Body</div>
    <%= f.text_area :body %>
  </div>
  
  <div class="y"><%= f.submit 'Update Book' %></div>
  
  <%= link_to "show", book_path(@book) %>
  <a href ='/books'>back</a>
  
<% end %>
</main>

